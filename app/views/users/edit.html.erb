<h1>Profile Edit</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
        
          <%= f.label :profile_message %>
          <%= f.text_area :profile_message %>
          
          <%= f.label :area %>
          <%= f.text_field :area %>

          <%= f.submit "Comfirm", class: "btn btn-large btn-primary" %>
        <% end %>
        
    </div>
    
</div>